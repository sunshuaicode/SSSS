						 <script >
              
							$(document).ready(function() {
								$.ajax({
									url: "../teacher/t_search", //访问的地址
									type: "post",
									//data:{},   //传的数据，参数
									dataType: "json",
									success: function(msg) {
										//这个msg就是controller返回的json数据，因为有很多条数据，所以要进行遍历
										$("tbody").empty();
										var k = 1;
										$.each(msg, function(i) {
						
											var trObj = $("<tr>");
											trObj.append("<td>" +k+"</td>");
											trObj.append("<td>" + msg[i].t_name + "</td>");
											trObj.append("<td>" + msg[i].t_password + "</td>");
											trObj.append("<td>" + msg[i].t_phonenum + "</td>");
											trObj.append("<td>" + msg[i].t_college + "</td>");
											trObj.append("<td><button class='btn btn-default' style='width: 50%;' onclick='javascript:showUpdateLayer(600,450)'>编辑</button>" +
											"<button class='btn btn-default' style='width: 50%;'>删除</button>");
											$("tbody").append(trObj);
											k++;
										})
									}
								});
							})
							
						</script>
